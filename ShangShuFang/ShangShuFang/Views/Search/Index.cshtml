@model IEnumerable<ShangShuFang.Models.BookInfo>

@using PagedList;
@using PagedList.Mvc;


<fieldset style="margin-bottom: 5px">

    <h4 style="color: #428bca">Library search :</h4>

    @using (Html.BeginForm("Index", "Search", FormMethod.Post))
    {

        <div class="form-group">
            <div class="col-sm-10">
                <input type="text" class="form-control" id="TaskPrice" name="TaskPrice"
                       placeholder="Please input the name or the author of the book">
            </div>
            <div style="margin-left:5px">
                <button type="submit" class="btn btn-success btn-lg">search</button>
            </div>
        </div>
    }
</fieldset>

<div class="table-responsive" style="margin-top:35px;margin-left:35px">
    <table class="table table-striped table-hover">
        @foreach (var item in Model)
        {
            <tr>
                <td style="display:none;">
                    @Html.DisplayFor(modelItem => item.BookName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookPublisher)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookPublishedDate)
                </td>

            </tr>
        }
    </table>
</div>
<link href="~/Content/PagedList.css" rel="stylesheet" />
@{
    var data = Model as IPagedList<ShangShuFang.Models.BookInfo>;
}
<div style="margin-left:35px;">
    @Html.PagedListPager(list: data,
                generatePageUrl: page => Url.Action("Index", new { p = page }))
</div>
